@model IEnumerable<MVCBiblioteka.Models.Message>

@{
    ViewBag.Title = "Lista wiadomości";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Lista wiadomości</h2>

<p>
    @Html.ActionLink("Stwórz nową wiadomość", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.msg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.msg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.MessageID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.MessageID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.MessageID })
        </td>
    </tr>
}

</table>
