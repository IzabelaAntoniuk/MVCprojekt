@model IEnumerable<MVCBiblioteka.Models.Category>

@{
    ViewBag.Title = "Lista kategorii";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Lista kategorii</h2>

<p>
    @Html.ActionLink("Stwórz nową kategorię", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FatherCategory.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FatherCategory.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
