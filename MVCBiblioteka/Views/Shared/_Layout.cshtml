<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @*[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]*@
    <link href="https://fonts.googleapis.com/css?family=Arima+Madurai" rel="stylesheet">

</head>

<body>
    <div class="navbar-collapse collapse navbar-fixed-top">
        <div >
            <div>
                <ul class="topnav">

                    <li><b>@Html.ActionLink(MVCBiblioteka.Resources.HomeTexts.Biblioteka, "Index", "Home")</b></li>
                    <li>@Html.ActionLink(MVCBiblioteka.Resources.HomeTexts.Lista_książek, "Index", "Books")</li>
                    <li>@Html.ActionLink(MVCBiblioteka.Resources.HomeTexts.Kategorie, "CategoriesList", "Categories")</li>
                    <li>@Html.ActionLink(MVCBiblioteka.Resources.HomeTexts.Autorzy, "AuthorsList", "Authors")</li>
                    <li>@Html.ActionLink(MVCBiblioteka.Resources.HomeTexts.Wydawnictwa, "PublishersList", "Publishers")</li>
                    <li>@Html.ActionLink(MVCBiblioteka.Resources.HomeTexts.Język, "Index", "Lang")</li>
                    <li>@{Html.RenderAction("CartSummary", "BooksCart");}</li>

                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a href="@Url.Content("~/Users/Admin/")">@MVCBiblioteka.Resources.HomeTexts.PanelAdmina</a></li>
                    }
                    else if (User.IsInRole("Pracownik"))
                    {
                        <li><a href="@Url.Content("~/Users/Admin/")">@MVCBiblioteka.Resources.HomeTexts.PanelPracownika</a></li>
                    }
                    <li class="icon">
                        <a href="javascript:void(0);" style="font-size:15px;" onclick="myFunction()">☰</a>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
                
            </div>

        </div>
        <div class="grad"></div>
    </div>
    <div class="container maindiv">
        @RenderBody()
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>
function myFunction() {
    var x = document.getElementById("myTopnav");
    if (x.className === "topnav") {
        x.className += " responsive";
    } else {
        x.className = "topnav";
    }
}
    </script>

</body>
</html>
